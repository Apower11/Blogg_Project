<link rel="stylesheet" href="/css/dashboard.css">
<%- include("../includes/navigation.ejs") %>
<h1>Welcome <%= user.username %></h1>
<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#posts">Your Posts</a></li>
      <li class="tab col s3"><a href="#personal-details">Personal Details</a></li>
      <li class="tab col s3"><a href="#test4">Test 4</a></li>
    </ul>
  </div>
  <div id="posts" class="col s12">
    <div class="card">
      <h1>Recent Posts</h1>
      <div class="row">
      <% for(let post of posts) { %>
              <div class='<%= className %>'>
                <div class="card">
                  <div class="card-content">
                    <span class="card-title"><%= post.title %></span>
                    <small>Posted by <%=post.author %> on <%= post.postedAtRough %></small>
                  </div>
                  <div class="card-image">
                    <img src="/<%= post.imageUrl %>">
                  </div>
                  <div class="card-action">
                      <a href="/post/<%=post._id %>">View Full Post</a>
                    </div>
                  <div class="card-content">
                    <p><%= post.content %></p>
                  </div>
                </div>
              </div>
      <% } if(posts.length <= 0) { %>
          <h1>No posts</h1>
      <% } %>
      <div class="card-action">
        <a href="/admin/user-posts">View All Your Posts</a>
      </div>
  </div>
  </div>
  </div>
  <div id="personal-details" class="col s12">
    <h3>Username: <%= user.username %></h3>
    <h3>Email: <%= user.email %></h3>
  </div>
  <div id="test4" class="col s12">Test 4</div>
</div>
<%- include("../includes/footer.ejs") %>
<script>
  $(document).ready(function(){
    $('.tabs').tabs();
  });
</script>